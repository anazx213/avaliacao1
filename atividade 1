import java.util.Scanner;

public class CalculoNotas {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double[] notas = new double[8];

        // Entrada das 8 notas
        for (int i = 0; i < notas.length; i++) {
            System.out.print("Digite a nota " + (i + 1) + ": ");
            notas[i] = sc.nextDouble();
        }

        // Médias bimestrais
        double bimestre1 = (notas[0] + notas[1]) / 2;
        double bimestre2 = (notas[2] + notas[3]) / 2;
        double bimestre3 = (notas[4] + notas[5]) / 2;
        double bimestre4 = (notas[6] + notas[7]) / 2;

        // Média semestral (primeiro semestre = bimestres 1 e 2)
        double semestre1 = (bimestre1 + bimestre2) / 2;

        // Média final (média simples das 8 notas)
        double mediaFinal = 0;
        for (double n : notas) {
            mediaFinal += n;
        }
        mediaFinal /= notas.length;

        // Saída
        System.out.println("\n=== RESULTADOS ===");
        System.out.println("Média 1º Bimestre: " + bimestre1);
        System.out.println("Média 2º Bimestre: " + bimestre2);
        System.out.println("Média 3º Bimestre: " + bimestre3);
        System.out.println("Média 4º Bimestre: " + bimestre4);
        System.out.println("Média Semestral (1º semestre): " + semestre1);
        System.out.println("Média Final: " + mediaFinal);

        sc.close();
    }
}
